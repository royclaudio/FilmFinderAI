<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmFinderXUI.Search" BackgroundColor="#8bd6f2"
             Title="Search">
    <Grid RowDefinitions="Auto,*">
        <SearchBar Placeholder="Search" FontSize="14"  Margin="0" VerticalOptions="Start" BackgroundColor="#8bd6f2" PlaceholderColor="#000000" TextColor="#090909" CancelButtonColor="#0D0C0C" />
        <ScrollView x:Name="scrollView"
                    Grid.Row="1"
                    VerticalOptions="FillAndExpand"
                    Scrolled="OnScrollViewScrolled" >
            <StackLayout>

                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>
                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>
                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>
                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
