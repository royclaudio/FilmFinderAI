<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmFinderXUI.Recommended" BackgroundColor="#8bd6f2"
             Title="Recommended">
   <Grid RowDefinitions="Auto,*">
        <Picker Title="Select Genre" FontSize="14" VerticalOptions="Start" FontAttributes="Bold"  Margin="5,0" HorizontalTextAlignment="Center" TextColor="#030303" BackgroundColor="#9EC3CF" IsVisible="True" TitleColor="#000000" />
        <ScrollView x:Name="scrollView"
                    Grid.Row="1"
                    VerticalOptions="FillAndExpand" Orientation="Horizontal">
            <StackLayout>

                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>
                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>
                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>
                <Image>
                    <Image.Source>
                        <UriImageSource Uri="https://aka.ms/campus.jpg"
                        CacheValidity="10:00:00:00" />
                    </Image.Source>
                </Image>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
