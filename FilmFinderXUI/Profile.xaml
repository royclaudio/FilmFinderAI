<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmFinderXUI.Profile" BackgroundColor="#8bd6f2"
             Title="Profile">
    <VerticalStackLayout Margin="5,0">

        <Border Stroke="black"
        StrokeThickness="4"
        StrokeShape="RoundRectangle 10,10,10,10"
        Background="white"
        Padding="16,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="4" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>
                <Label Text="Demo User" Grid.Column="0" VerticalTextAlignment="Center"/>
                <ImageButton Source="settings.png" Grid.Column="1"  MinimumHeightRequest="25" />
                <BoxView Grid.Row="1" Grid.ColumnSpan="2" Color="Black" HeightRequest="2" HorizontalOptions="Fill" />

            </Grid>
        </Border>
        <ScrollView>
            <Image Aspect="Center" FlexLayout.AlignSelf="Center" Source="dotnet_bot.png"  MinimumHeightRequest="500" HorizontalOptions="Center"  />
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
